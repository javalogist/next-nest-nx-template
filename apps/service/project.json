{
  "name": "service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/service/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "defaultConfiguration": "production",
      "options": {
        "webpackConfig": "apps/service/webpack.config.js",
        "outputPath": "dist/service"
      },
      "configurations": {
        "production": {
          "define": {
            "process.env.NODE_ENV": "production"
          },
          "assets": [
            {
              "input": ".",
              "glob": ".env",
              "output": "."
            }
          ]
        },
        "development": {
          "define": {
            "process.env.NODE_ENV": "development"
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "service:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "service:build:development"
        },
        "production": {
          "buildTarget": "service:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f apps/service/Dockerfile . -t service"
    }
  }
}
